<bgf:grammar xmlns:bgf="http://planet-sl.org/bgf">
  <bgf:production>
    <label>l1</label>
    <nonterminal>a</nonterminal>
    <bgf:expression>
      <star>
        <bgf:expression>
          <nonterminal>x</nonterminal>
        </bgf:expression>
      </star>
    </bgf:expression>
  </bgf:production>
  <bgf:production>
    <label>l2</label>
    <nonterminal>b</nonterminal>
    <bgf:expression>
      <star>
        <bgf:expression>
          <nonterminal>x</nonterminal>
        </bgf:expression>
      </star>
    </bgf:expression>
  </bgf:production>
</bgf:grammar>

